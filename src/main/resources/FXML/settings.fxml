<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="870.0" prefWidth="1530.0" stylesheets="@../../CSS/style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <BorderPane layoutY="-6.0" prefHeight="870.0" prefWidth="1530.0">
        <!-- Navigation bar and Sidebar -->
        <top>
            <HBox>
                <fx:include source="./sideBar.fxml" />
                <fx:include source="./navBar.fxml" />
            </HBox>
        </top>
    </BorderPane>

    <!-- Main content area -->
    <AnchorPane layoutX="108.0" layoutY="77.0" prefHeight="797.0" prefWidth="1426.0">
        <children>
            <Label layoutX="245.0" layoutY="74.0" style="-fx-font-size: 50;" text="Settings" textFill="#0d134b">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <!-- Lebanese Lira Rate Section -->
            <AnchorPane layoutX="245.0" layoutY="183.0" prefHeight="385.0" prefWidth="935.0" style="-fx-background-color: white;">
                <children>
                    <!-- Label for Lebanese Lira Rate -->
                    <Label layoutX="74.0" layoutY="69.0" prefHeight="56.0" prefWidth="166.0" text="Lebanese Lira Rate" textFill="#0d134b">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                    
                    <!-- Text Field for inputting rate -->
                    <TextField fx:id="rateTextField" layoutX="468.0" layoutY="72.0" prefHeight="48.0" prefWidth="297.0" promptText="Enter rate">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </TextField>

                    <!-- Apply Button -->
                    <Button fx:id="applyButton" layoutX="773.0" layoutY="77.0" mnemonicParsing="false" onAction="#handleApplyRate" style="-fx-background-color: #0d134b;" text="Apply" textFill="WHITE">
                        <font>
                            <Font size="18.0" />
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>

                    <!-- Points Settings with Arrow Icon -->
                    <HBox layoutX="74.0" layoutY="158.0">
                        <Hyperlink fx:id="pointsLink" onAction="#handlePoints" prefHeight="35.0" prefWidth="152.0" text="Points Settings" textFill="#0d134b">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Hyperlink>
                    </HBox>

                    <!-- About Us with Arrow Icon -->
                    <HBox layoutX="74.0" layoutY="236.0">
                        <Hyperlink fx:id="aboutUsLink" onAction="#handleAboutUs" prefHeight="35.0" prefWidth="152.0" text="About Us" textFill="#0d134b">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Hyperlink>
                    </HBox>
                     <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="803.0" layoutY="242.0" pickOnBounds="true" preserveRatio="true">
                         <image>
                     <Image url="@../images/next.png" />
                         </image>
                     </ImageView>
                     <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="803.0" layoutY="169.0" pickOnBounds="true" preserveRatio="true">
                         <image>
                             <Image url="@../images/next.png" />
                         </image>
                     </ImageView>
                </children>
            </AnchorPane>
        </children>
    </AnchorPane>
</AnchorPane>
