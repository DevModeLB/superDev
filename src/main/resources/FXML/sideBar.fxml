                  <graphic>
                     <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../images/log-out.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </Hyperlink>
            </children>
         </AnchorPane>



      </children>
      <cursor>
         <Cursor fx:constant="DEFAULT" />
      </cursor>
      <opaqueInsets>
