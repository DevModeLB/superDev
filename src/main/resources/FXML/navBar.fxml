<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="95.0" prefWidth="1530.0" styleClass="anchor-pane" stylesheets="@../CSS/style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <!-- Search and Button HBox -->
    <HBox alignment="CENTER_LEFT" layoutX="100.0" layoutY="25.0" prefHeight="63.0" prefWidth="515.0" spacing="10.0">
        <TextField prefHeight="40.0" prefWidth="420.0" promptText="Search..." style="-fx-background-color: white; -fx-border-color: trasparent;" styleClass="search-field" />
        <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" style="-fx-border-radius: 0;" styleClass="search-button">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/search.png" />
                    </image>
                </ImageView>
            </graphic>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
        </Button>
    </HBox>

    <!-- Hyperlinks HBox -->
    <HBox alignment="CENTER_RIGHT" layoutX="865.0" layoutY="25.0" prefHeight="63.0" spacing="20.0">
        <Hyperlink styleClass="hyperlink" text="Products">
            <font>
                <Font size="30.0" />
            </font>
        </Hyperlink>
    </HBox>
     <Hyperlink layoutX="1265.0" layoutY="25.0" styleClass="hyperlink" text="Order">
         <font>
             <Font size="30.0" />
         </font>
     </Hyperlink>
     <Hyperlink layoutX="1065.0" layoutY="25.0" styleClass="hyperlink" text="Category">
         <font>
             <Font size="30.0" />
         </font>
     </Hyperlink>
</AnchorPane>
